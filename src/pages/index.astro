---
import Main from '../layouts/Main.astro';
const profilePicture =
  'https://images.unsplash.com/photo-1555169062-013468b47731?q=80&w=987&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D';
---

<Main>
  <div class="profile">
    <img
      class="profile-picture"
      width="100px"
      height="100px"
      src={profilePicture}
      alt="parrot"
    />
    <div class="profile-details">
      <h1>Frau Katerina</h1>
      <h2>VP of Engineering at Google</h2>
      <p>
        Helping developers be excellent and succed at building scalable
        products.
      </p>
    </div>
  </div>
</Main>

<style>
  .profile {
    display: flex;
    align-items: flex-start;
    flex-wrap: wrap;
    padding: 1rem 0 3rem;
  }

  .profile-details {
    flex: 1 0 300px;
  }
  .profile-details > h1 {
    margin-top: 0;
  }

  .profile-picture {
    border-radius: 50%;
    margin: 0 2rem 1rem 0;
  }
</style>
