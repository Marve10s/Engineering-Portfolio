---
import Main from '../layouts/Main.astro';
---

<Main title="Ruslana Avramova">
  <div class="profile">
    <img
      class="profile-picture"
      width="100px"
      height="100px"
      src="/public/images/ruslanka.jpg"
      alt="Avatar"
    />
    <div class="profile-details">
      <h1>Ruslana Avramova</h1>
      <h2>VP of Engineering at Google</h2>
      <p>
        Helping developers be excellent and succed at building scalable
        products.
      </p>
    </div>
  </div>
</Main>

<style>
  .profile {
    display: flex;
    align-items: flex-start;
    flex-wrap: wrap;
    padding: 1rem 0 3rem;
  }

  .profile-details {
    flex: 1 0 300px;
  }
  .profile-details > h1 {
    margin-top: 0;
  }

  .profile-picture {
    border-radius: 50%;
    margin: 0 2rem 1rem 0;
  }
</style>
